<% @materials.each do |material| %>
  <tr>
    <td><%= material_type(material.material_type_id).name %></td>
    <td><%= material.name %></td>
    <td><%= material.matriculation_number %></td>
    <td><%= material.serial_number %></td>
    <td><%= material.status %></td>
    <td>
                    <div class="action-buttons">
                    <%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'), edit_material_path(material), title: "Modifier", remote: true %>




<%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"></i>
'), material_delete_path(material), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>
  </tr>
<% end %>