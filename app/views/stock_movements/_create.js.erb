$("ul.errors").html("");
<% if @stock_movement.errors.any? %>
  <% @stock_movement.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".stock-movements").html("<%= escape_javascript(render 'index') %>");
  $("#stock-movement-modal").modal("hide");
 
<% end %>