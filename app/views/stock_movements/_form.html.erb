<%= form_with(model: stock_movement, local: false) do |form| %>
<div class="modal-body">
     <ul class="errors">
      </ul>

  
    <div class="row">

      <div class="col-sm-6">
         <div class="form-group">
            <%= form.label :reference %>
            <%= form.text_field :reference, id: :stock_movement_reference, class: "form-control", placeholder: "Référence"  %>
          </div>

          <div class="form-group">
            <%= form.label :movement_type_id %>
            <%= form.collection_select(:movement_type_id, @movement_types, :id, :name, {prompt: "Type de mouvement"}, class: "form-control", required: true) %> 

          </div>
          <div class="form-group">
            <%= form.label :product_category_id %>
            <%= form.collection_select(:product_category_id, @product_categories, :id, :name, {prompt: "Catégorie de produit"}, class: "form-control", required: true) %> 

          </div>
          <div class="form-group">
            <%= form.label :product_id %>
            <%= form.collection_select(:product_id, @products, :id, :name, {prompt: "Produit"}, class: "form-control", required: true) %> 

          </div>
          
      </div>

      <div class="col-sm-6">
       

          <div class="form-group">
            <%= form.label :quantity %>
            <%= form.number_field :quantity, id: :stock_movement_quantity, class: "form-control", placeholder: "Quantité"  %>
          </div>

           <div class="form-group">
            <%= form.label :unity_id %>
            <%= form.collection_select(:unity_id, @unities, :id, :name, {prompt: "Unité"}, class: "form-control", required: true) %> 

          </div>

          <div class="form-group">
            <%= form.label :observations %>
            <%= form.text_area :observations, id: :stock_movement_observations, class: "form-control", placeholder: "Observations"  %>

          </div>

      </div>

    </div>
   
  
    

   </div><!-- modal body -->
            <div class="modal-footer">

            <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
            <%= form.submit "Enregistrer", class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
    </div>
<% end %>
