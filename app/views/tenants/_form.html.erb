<%= form_with(model: tenant, local: false) do |form| %>
  <div class="modal-body">
  
        <ul class="errors">
        </ul>

  <div class="form-group">
    <%= form.label :tenant_type_id, "Type" %>
    
    <%= form.collection_select(:tenant_type_id, @tenant_types, :id, :name, {prompt: "Sélectionner"}, class: "form-control", required: true) %> 
  </div>

  <div class="form-group">
    <%= form.label :civility, "Civilité" %>
    <%= form.select :civility, CIVILITY, {prompt: "Sélectionner"}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, "Nom" %>
    <%= form.text_field :last_name, class: "form-control", placeholder: "Nom" %>
  </div>

  <div class="form-group">
    <%= form.label :first_name, "Prénom" %>
    <%= form.text_field :first_name, class: "form-control" , placeholder: "Prénom"%>
  </div>

  <div class="form-group">
    <%= form.label :birth_date, "Date de naissance" %>
    <%= form.date_field :birth_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :birth_place, "Lieu de naissance" %>
    <%= form.text_field :birth_place, class: "form-control", placeholder: "Lieu de naissance" %>
  </div>

  <div class="form-group">
    <%= form.label :id_type, "Type de pièce" %>
    <%= form.select :id_type, TYPE_ID, {prompt: "Sélectionner"}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :id_number, "N°Pièce" %>
    <%= form.text_field :id_number,  %>
  </div>

  <div class="field">
    <%= form.label :id_expiration, "Date d'expiration" %>
    <%= form.text_field :id_expiration, class: "form-control", placeholder: "Date d'expiration" %>
  </div>

  <div class="field">
    <%= form.label :profession %>
    <%= form.text_field :profession %>
  </div>

  <div class="field">
    <%= form.label :nationality %>
    <%= form.text_field :nationality %>
  </div>

  <div class="field">
    <%= form.label :company_name %>
    <%= form.text_field :company_name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.text_field :country %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :about %>
    <%= form.text_area :about %>
  </div>

  

   </div><!-- modal body -->
     <div class="modal-footer">
            <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
            <%= form.submit "Enregistrer", class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
    </div>
<% end %>
