<%= form_with(model: landlord, local: false) do |form| %>
  <div class="modal-body">
  
    <ul class="errors">
    </ul>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :landlord_type_id, "Type", class: "required" %>
          
          <%= form.collection_select(:landlord_type_id, @landlord_types, :id, :name, {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%", required: true) %> 
        </div>
      </div>
      <div class="col-md-6">
          <div class="form-group">
            <%= form.label :company_name, "Société" %>
            <%= form.text_field :company_name, class: "form-control", placeholder: "Société" %>
          </div>
        </div>
    </div>

      <div class="row">

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :civility, "Civilité" %>
            <%= form.select :civility, CIVILITIES, {prompt: "Sélectionner"}, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :last_name, "Nom" %>
            <%= form.text_field :last_name, class: "form-control", placeholder: "Nom" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :first_name, "Prénom" %>
            <%= form.text_field :first_name, class: "form-control" , placeholder: "Prénom"%>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :birth_date, "Date de naissance" %>
            <%= form.date_field :birth_date, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :birth_place, "Lieu de naissance" %>
            <%= form.text_field :birth_place, class: "form-control", placeholder: "Lieu de naissance" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :id_type, "Type de pièce" %>
            <%= form.select :id_type, TYPE_ID, {prompt: "Sélectionner"}, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :id_number, "N°Pièce" %>
            <%= form.text_field :id_number, class: "form-control", placeholder: "N°Pièce"  %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :id_expiration, "Date d'expiration" %>
            <%= form.date_field :id_expiration, class: "form-control", placeholder: "Date d'expiration" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :profession, "Profession" %>
            <%= form.text_field :profession, class: "form-control", placeholder: "Profession" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :nationality, "Nationalité" %>
            <%= form.text_field :nationality , class: "form-control", placeholder: "Nationalité" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :email, "Email" %>
            <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
          </div>
        </div>

        
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= form.label :address, "Adresse", class: "required" %>
            <%= form.text_field :address, class: "form-control", placeholder: "Adresse", required: true %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :phone, "Téléphone", class: "required" %>
            <%= form.text_field :phone, class: "form-control", placeholder: "Téléphone", required: true %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :city, "Ville" , class: "required" %>
            <%= form.text_field :city, class: "form-control", placeholder: "Ville", required: true %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label :country, "Pays", class: "required" %>
            <%= form.text_field :country, class: "form-control", placeholder: "Pays", required: true %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= form.label :about , "Notes" %>
            <%= form.text_area :about, class: "form-control", placeholder: "Notes" %>
          </div>
        </div>
      </div>

  

   </div><!-- modal body -->
     <div class="modal-footer">
            <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
            <%= form.submit "Enregistrer", class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
    </div>
<% end %>
