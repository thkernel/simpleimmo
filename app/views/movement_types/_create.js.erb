$("ul.errors").html("");
<% if @movement_type.errors.any? %>
  <% @movement_type.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".movement-types-index").html("<%= escape_javascript(render 'index') %>");
  $("#movement-type-modal").modal("hide");
 
<% end %>