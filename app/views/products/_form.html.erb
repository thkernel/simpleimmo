<%= form_with(model: product, local: false) do |form| %>
 <div class="modal-body">
     <ul class="errors">
      </ul>

    <div class="row">
      <div class="col-md-6">
         <div class="form-group">
          <%= form.label :name  %>
          <%= form.text_field :name, id: :product_name, class: "form-control", placeholder: "Nom", required: true %>
        </div>
      </div>

       <div class="col-md-6">
        <div class="form-group">
          <%= form.label :product_category_id  %>
          <%= form.collection_select(:product_category_id, @product_categories, :id, :name, {prompt: "Sélectionner une catégorie"}, class: "form-control", required: true) %> 
        </div>
      </div>
    </div>
 
    <div class="row">
      <div class="col-md-6">
         <div class="form-group">
          <%= form.label :unity_id  %>
          <%= form.collection_select(:unity_id, @unities, :id, :name, {prompt: "Sélectionner une unité"}, class: "form-control", required: true) %> 

        </div>

      </div>

       <div class="col-md-6">
          <div class="form-group">
            <%= form.label :unit_price  %>
            <%= form.number_field :unit_price, id: :product_unit_price , class: "form-control", placeholder: "Prix Unitaire" %>
        </div>
      </div>

    </div>
   
 

  <div class="form-group">
    <%= form.label :deposit_id %>
    <%= form.collection_select(:deposit_id, @deposits, :id, :name, {prompt: "Sélectionner un magasin"}, class: "form-control", required: true) %> 

</div>


  <div class="form-group">
    <%= form.label :reorder_threshold  %>
    <%= form.number_field :reorder_threshold, id: :product_reorder_threshold, class: "form-control", placeholder: "Seuil de réaprovisionnement" %>
  </div>

  </div><!-- modal body -->
            <div class="modal-footer">
            <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
            <%= form.submit "Enregistrer", class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
    </div>
<% end %>
